<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:fontFamily="monospace"
        android:gravity="end"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:stretchColumns="*"
        android:shrinkColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button style="@style/calculator_button"
                android:id="@+id/btn1"
                android:text="@string/btn1"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btn2"
                android:text="@string/btn2"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btn3"
                android:text="@string/btn3"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btnPlus"
                android:text="@string/btnPlus"
                android:onClick="setOperator"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button style="@style/calculator_button"
                android:id="@+id/btn4"
                android:text="@string/btn4"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btn5"
                android:text="@string/btn5"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btn6"
                android:text="@string/btn6"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btnMinus"
                android:text="@string/btnMinus"
                android:onClick="setOperator"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button style="@style/calculator_button"
                android:id="@+id/btn7"
                android:text="@string/btn7"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btn8"
                android:text="@string/btn8"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btn9"
                android:text="@string/btn9"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btnTimes"
                android:text="@string/btnTimes"
                android:onClick="setOperator"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button style="@style/calculator_button"
                android:id="@+id/btn0"
                android:text="@string/btn0"
                android:onClick="addDigit"/>
            <Button style="@style/calculator_button"
                android:id="@+id/btnEqual"
                android:text="@string/btnEqual" />
            <Button style="@style/calculator_button"
                android:id="@+id/btnDivide"
                android:text="@string/btnDivide"
                android:onClick="setOperator" />
            <Button style="@style/calculator_button"
                android:id="@+id/btnClear"
                android:text="@string/btnClear" />
        </TableRow>
    </TableLayout>


</android.support.constraint.ConstraintLayout>